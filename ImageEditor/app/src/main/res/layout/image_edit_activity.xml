<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cefle.imageeditor.ImageEditActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"></ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:background="@drawable/image_edit_scrollbar_background">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:showDividers="middle"
                        android:divider="@drawable/divider">


                        <!-- TODO -->
                        <!--
                            Every TextView here needs to be replaced with buttons of some sort that
                            represent all of the actions that can be done on an image.
                        -->
                        <TextView
                            android:id="@+id/ie_darken"
                            android:text="@string/ie_darken"
                            style="@style/IEButton">
                        </TextView>

                        <TextView
                            android:id="@+id/ie_brighten"
                            android:text="@string/ie_lighten"
                            style="@style/IEButton">
                        </TextView>

                        <TextView
                            android:id="@+id/ie_badblur"
                            android:text="@string/ie_badblur"
                            style="@style/IEButton">
                        </TextView>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </RelativeLayout>


    </FrameLayout>

</LinearLayout>
